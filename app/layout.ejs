<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title><%- title %></title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Icons+Outlined"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://unpkg.com/swiper/swiper-bundle.min.css"
    />
    <link rel="stylesheet" href="./assets/style/all.css" />
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-third py-35">
        <div class="container">
          <a class="navbar-brand text-secondary fs-4" href="/">DOYOGA</a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav | test-muted mx-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a
                  class="nav-link <% if(current === 'course'){ %> active <%} %>"
                  aria-current="page"
                  href="course.html"
                  >課程介紹</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link <% if(current === 'yoga-space'){ %> active <%} %>"
                  href="yoga-space.html"
                  >瑜珈空間</a
                >
              </li>
              <li class="nav-item">
                <a
                  class="nav-link <% if(current === 'curriculum'){ %> active <%} %>"
                  href="curriculum.html"
                  tabindex="-1"
                  aria-disabled="true"
                  >當月課表</a
                >
              </li>
            </ul>
          </div>
          <div class="hstack d-none d-lg-flex">
            <a
              href="reservation-choose.html"
              class="btn btn-outline-primary rounded-l1 <% if(current === 'reservation-choose'){ %> active <%} %>"
            >
              立即預約</a
            ><a
              href="contact.html"
              class="btn btn-outline-primary rounded-l1 ms-3 <% if(current === 'contact'){ %> active <%} %>"
            >
              聯絡我們
            </a>
          </div>
        </div>
      </nav>
      <% if( current === 'index') { %> <%-include('./components/banner.ejs')%>
      <%-include('./pages/index.ejs')%> <% } %>
      <!-- 預約 -->
      <% if( current === 'reservation-choose') { %>
      <%-include('./pages/reservation-choose.ejs')%> <% } %> <% if( current ===
      'reservation-profile') { %>
      <%-include('./pages/reservation-profile.ejs')%> <% } %> <% if( current ===
      'reservation-finish') { %> <%-include('./pages/reservation-finish.ejs')%>
      <% } %>
      <!-- 課程介紹 -->
      <% if( current === 'course') { %> <%-include('./pages/course.ejs')%> <% }
      %>
      <!-- 瑜珈空間 -->
      <% if( current === 'yoga-space') { %>
      <%-include('./pages/yoga-space.ejs')%> <% } %>
      <!-- 聯絡我們 -->
      <% if( current === 'contact') { %> <%-include('./pages/contact.ejs')%> <%
      } %>
      <!-- 當月課表 -->
      <% if( current === 'curriculum') { %>
      <%-include('./pages/curriculum.ejs')%> <% } %>
    </header>
    <%- contents %> <%-include('./components/footer.ejs')%>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="./assets/js/vendors.js"></script>
    <script src="./assets/js/all.js"></script>
  </body>
</html>
